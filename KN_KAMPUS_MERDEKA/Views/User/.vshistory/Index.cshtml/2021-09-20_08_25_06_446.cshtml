@using KN2021_E_Competency.Common
@using KN2021_E_Competency.Common.Entity
@using KN2021_E_Competency.MVC
@*@using KN2021_E_Competency.MVC.FilterConfig*@

@{
    ViewBag.Title = "Master User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Menu", FormMethod.Post, new { id = "frm1" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("txtHiddenObject")
    @Html.Hidden("txtGUID")

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small> @ViewBag.Title </small>
        </h1>
    </section>

    <section class="content">
        <div class="row">
            <!-- left column -->
            @*<div class="col-md-6">*@
            <!-- general form elements -->
            <div class="box box-success">
                <div class="box-header with-border text-right">
                    <a id="btnSave" class="btn btn-success"><i class="fa fa-floppy-o"></i> Save</a>
                    <a id="btnNew" class="btn btn-warning"><i class="fa fa-refresh"></i> New</a>

                    <a id="btnResetPassword" stlye="display:none;" class="btn btn-danger"><i class="fa fa-reset"></i> Reset Password</a>
                    @*<a id="btnDelete" class="btn btn-danger" style="display:none;"><i class="fa fa-trash"></i> Delete </a>*@
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label id="lblID" class="col-sm-2 control-label">ID</label>
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <button type="button" class="btn btn-danger" id="btnLOVID"> <i class="fa fa-search"></i></button>
                                    </div>
                                    <input type="text" class="form-control" id="txtID" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label id="lblUserName" style="margin-top:14px" class="col-sm-2 control-label">User Name</label>
                            <div class="col-sm-10">
                                <input type="text" style="margin-top:10px" class="form-control" id="txtUserName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label id="lblFullName" style="margin-top:14px" class="col-sm-2 control-label">Full Name</label>
                            <div class="col-sm-10">
                                <input type="text" style="margin-top:10px" class="form-control" id="txtFullName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label id="lblNick" style="margin-top:14px" class="col-sm-2 control-label">Initial Name</label>
                            <div class="col-sm-10">
                                <input type="text" style="margin-top:10px" class="form-control" id="txtNick" maxlength="10">
                            </div>
                        </div>
                        <div class="form-group">
                            <label id="lblEmployeeID" style="margin-top:14px" class="col-sm-2 control-label">Employee ID</label>
                            <div class="col-sm-10">
                                <input type="text" style="margin-top:10px" class="form-control" id="txtEmpID" maxlength="10">
                            </div>
                        </div>
                        <div class="form-group">
                            <label id="lblEmail" style="margin-top:16px" class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <input type="text" style="margin-top:10px" class="form-control" id="txtEmail">
                            </div>
                        </div>
                        <div class="form-group">
                            <label id="lblActive" style="margin-top:10px" class="col-sm-2 control-label">Active</label>
                            <div class="col-sm-8">
                                <input type="checkbox" style="margin-top:14px" id="chkActive" />
                            </div>
                            <div class="col-sm-10">
                            </div>
                        </div>
                        <div class="row">
                        </div>
                        <div class="form-group">
                            <label id="lblUseAD" style="margin-top:10px" class="col-sm-2 control-label">Use AD</label>
                            <div class="col-sm-8">
                                <input type="checkbox" style="margin-top:14px" id="chkAD" />
                            </div>
                        </div>

                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">

                    </div>
                </form>
            </div>
            <!-- /.box -->

        </div>
        <!--/.col (left) -->
        @*</div>*@
        <!-- /.row -->
    </section>


    @section scripts
    {
        <script src="~/Scripts/customs/GlobalScript.js?rand=@clsMMainCustomBL.generateParameter()"></script>
        <script src="~/Scripts/customs/systems/user/userscript.js?rand=@clsMMainCustomBL.generateParameter()"></script>
    }
}
