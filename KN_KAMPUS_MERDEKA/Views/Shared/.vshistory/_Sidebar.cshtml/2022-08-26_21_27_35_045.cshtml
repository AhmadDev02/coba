@using KN_KAMPUS_MERDEKA.MVC;
@using KN_KAMPUS_MERDEKA.MVC.App_Start;
@using KN_KAMPUS_MERDEKA.COMMON.Constant;
@using KN_KAMPUS_MERDEKA.BUSSLOGIC.CustomBL.Systems;

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="#" class="brand-link" data-widget="pushmenu">
        <img src="~/Assets/img/favicon.ico" alt="Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light"> @Configuration.AppName</span>

    </a>
    @*<label class="switch">
            <input type="checkbox" id="darkSwitch" name="darkSwitch">
            <span class="slider"></span>
        </label>*@
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/Assets/template/adminlte/img/avatar5.png" class="img-circle elevation-2"
                     alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@CurrentSession.getPrincipal.user.txtUserName.ToUpper() </a>
            </div>

        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!--  menu -->
                @Html.Raw(mMenuCustomBL.GenerateMenuHierarchy(GlobalClass.dLogin.roles, ""))
                <li class="nav-item">
                    <a href="#" class="nav-link" data-toggle="modal" data-target="#modalLogout">
                        <i class="fas fa-sign-out-alt nav-icon"></i>
                        <p>Logout</p>
                    </a>
                </li>

            </ul>

        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>