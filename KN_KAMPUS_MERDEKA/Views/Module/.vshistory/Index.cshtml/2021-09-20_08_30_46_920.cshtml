@using KN2021_E_RPS.Common
@using KN2021_E_RPS.Common.Entity
@using KN2021_E_RPS.MVC

@{
    ViewBag.Title = "Master Module";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Module", FormMethod.Post, new { id = "frmModule" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("txtHiddenObject")
    @Html.Hidden("txtGUID")

     <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small> @ViewBag.Title </small>
        </h1>
    </section>

    <section class="content">
        <div class="row">
            <!-- left column -->
            @*<div class="col-md-6">*@
            <!-- general form elements -->
            <div class="box box-success">
                <div class="box-header with-border text-right">
                    <a id="btnSave" class="btn btn-success"><i class="fa fa-floppy-o"></i> Save</a>
                    <a id="btnNew" class="btn btn-warning"><i class="fa fa-refresh"></i> New</a>
                    <a id="btnDelete" class="btn btn-danger" style="display:none;"><i class="fa fa-trash"></i> Delete </a>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label id="lblModuleID" class="col-sm-2 control-label">Module ID</label>
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <button type="button" class="btn btn-danger" id="btnLOVID"> <i class="fa fa-search"></i></button>
                                    </div>
                                    <input type="text" class="form-control" id="txtID" disabled>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label id="lblModuleName" style="margin-top:14px" class="col-sm-2 control-label">Module Name</label>
                            <div class="col-sm-10">
                                <input type="text" style="margin-top:10px" class="form-control" id="txtModuleName">
                            </div>
                        </div>

                        <div class="form-group">
                            <label id="lblDescription" style="margin-top:14px" class="col-sm-2 control-label">Description</label>
                            <div class="col-sm-10">
                                <input type="text" style="margin-top:10px" class="form-control" id="txtDescription">
                            </div>
                        </div>

                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">

                    </div>
                </form>
            </div>
            <!-- /.box -->

        </div>
        <!--/.col (left) -->
        @*</div>*@
        <!-- /.row -->
    </section>

    @section scripts
    {
        <script src="~/Scripts/customs/GlobalScript.js?rand=@clsMMainCustomBL.generateParameter()"></script>
        <script src="~/Scripts/customs/systems/module/modulescripts.js?rand=@clsMMainCustomBL.generateParameter()"></script>
    }
}