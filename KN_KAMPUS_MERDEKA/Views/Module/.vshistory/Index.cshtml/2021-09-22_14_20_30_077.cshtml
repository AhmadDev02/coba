@using KN2021_E_RPS.Common
@using KN2021_E_RPS.Common.Entity
@using KN2021_E_RPS.MVC


@{
    ViewBag.Title = "Master Module";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Index", "Module", FormMethod.Post, new { id = "frm" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("txtHiddenObject")
    @Html.Hidden("txtGUID")
}
<div class="row" id="moduleFormRow" style="display: none;">
    <div class="col-md-6 offset-md-3 col-sm-10 offset-sm-1">
        <div class="card">
            <div class="card-header card-outline card-success">
                <div class="card=title">
                    <h3 class="card-title">
                        <i class="fa fa-plus"></i> <span id="moduleFormTitle">Add Module</span>
                    </h3>
                    <div class="card-tools">
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Module Name</label>
                            <input type="text" class="form-control" placeholder="Enter Module Name " id="txtModuleName">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Description</label>
                            <input type="text" class="form-control" placeholder="Enter Description " id="txtDescription">
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer ">
                <button class="btn btn-outline-success  float-right m-1" id="btnSave">
                    <i class="fa fa-save"></i> Simpan
                </button>
                <button class="btn btn-outline-danger  float-right m-1" id="btnCancelAddModule">
                    <i class="fa fa-chevron-down"></i> Cancel
                </button>
            </div>
        </div>
    </div>
</div>
<div class="row" id="moduleTableRow">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header card-outline card-red">
                <h3 class="card-title">
                    <i class="fa fa-stream"></i> @ViewBag.Title
                </h3>
                <div class="card-tools">
                    <button id="btnAddModule" class="btn btn-success">
                        <i class="fas fa-plus-square"></i> Add
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover table-striped" id="tableModule">
                    <thead>
                        <tr>
                            <th class="text-center">ID Module</th>
                            <th class="text-center">Module Name</th>
                            <th class="text-center">Description</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody id="tbody">
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
            <div class="card-footer clearfix">
                <ul class="pagination pagination-sm m-0 float-right">
                    <li class="page-item"><a class="page-link" id="btnPrev">«</a></li>
                    <li class="page-item"><a class="page-link" id="btnNext">»</a></li>
                </ul>
            </div>
        </div>
        <!-- /.card -->
    </div>
</div>



<!-- /.row -->
@section scripts{
    <script src="~/Assets/js/customs/systems/module/modulescripts.js?rand=@clsMMainCustomBL.generateParameter()"></script>
    <script>
            $(() => {
                $(".search-bar").append(@Html.Partial("_Search"));
                $inputSearch = $(".search-bar").find(".search-input");
                $inputSearch.on('keyup', (e) => {
                    if ($inputSearch.val().toString().length % 3 == 0 && $inputSearch.val().toString() != cari  || (e.key == 'Enter')) {
                        cari = $inputSearch.val();
                        searchModule();
                    }

                })
            });
    </script>
}